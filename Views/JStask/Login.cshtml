
@{
    ViewBag.Title = "Login";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<body>
    <div id="main">
        <div id="container">
            <h1 id="title">Login Form</h1>
            <table>
                <tr>
                    <td class="label">
                        <p>Username:</p>
                    </td>
                    <td class="input">
                        <input type="text" placeholder="Enter user name" value="" id="user_tbx" />
                    </td>
                </tr>
                <tr id="row2">
                    <td class="label">
                        <p>Password:</p>
                    </td>
                    <td class="input">
                        <input type="password" placeholder="Enter password" value="" id="password_tbx" />
                        <p id="sucs_mes">Login successful...</p>           
                    </td>
              </tr>
                <tr id="row3">
                    <td class="label">
                    </td>
                    <td class="input" id="btns">
                        <button onclick="showInfo()" class="btn">Login</button>
                        <button onclick="reset()" class="btn">Reset</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>
<style>
    #main{
        height:500px;
    }
    body{
        background-color:lightskyblue;
    }
    #container {
        width: 500px;
        height: 300px;
        background-color: lightseagreen;
        border:5px groove cyan;
        margin:auto;
        margin-top:200px;
        border-radius:10px;
    }
   #title{
       font-size:25px;
       font-weight:bold;
       text-align:center;
       color:white;

   }
   table{
       width:100%;
   }
   #label{
       width:40%;
   }
   #input
   {
       width:60%;
   }
   p
   {
       font-size:15px;
   }
   input{
       width:100%;
       height:30px;
       border-bottom:2px solid black;
   }
   button{
       padding:3px 20px;
       border-radius:10px;
       background-color:cyan;
   }
   #row2
   {
       height:30px;
   }
   #btns{
       height:70px;
   }
   #sucs_mes{
       display:none;
        color:red;
        margin-top:10px;
   }
   .btn:hover{

   }
</style>
<script>
    var root = function (url) {
            var path = '@Request.ApplicationPath'
            if (path != '/') path = path + '/'
            return path + url;
    }
    //function to redirect to info page
    function info() {
        window.open(root("JStask/Info"), "_parent");
    }
    //function to clear the text boxes
    function reset() {
        $("#user_tbx").val("");
        $("#password_tbx").val("");
        $("#sucs_mes").hide();
    }
    //login function

    function showInfo() {
        
        var username = "satya7654";
        var password = "9949663003";
        var entered_user = $("#user_tbx").val();
        var enteredPwd = $("#password_tbx").val();
        if (username == entered_user && password == enteredPwd) {
            $("#sucs_mes").show();
            info();
           
        }
        else {
           alert("please enter correct crendentials")
        }
        reset();
    }
</script>
